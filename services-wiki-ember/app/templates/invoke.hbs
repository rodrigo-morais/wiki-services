{{view 'breadcrumb' paths='Hubs,hub.name' page=name model=this}}


{{#if controllers.admin.logged}}
	{{view 'taskbar'}}
{{/if}}

<h2>
  {{name}}
</h2>

<div class='row'>
	<div class='httpVerb-body col-md-10 col-md-offset-1'>
		<div class='panel panel-default'>
			<div  class='panel-heading col-md-12'>
			</div>
			<div class='panel-body panel-body-scroll'>
				<div class='panel panel-default table-parameters'>
					<div  class='panel-heading'>
						Parâmetros
					</div>
					<div class='panel-body'>
						<table class='table table-striped table-condensed table-hover'>
							<thead>
								<tr>
									<th>
										Nome
									</th>
									<th>
										Tipo
									</th>
									<th>
										Valor Inicial
									</th>
								</tr>
							<thead>
							<tbody>
								{{#each parameters}}
									<tr>
										<td>
											{{name}}
										</td>
										<td>
											{{type}}
										</td>
										<td>
											{{default}}
										</td>
									</tr>
								{{else}}
									<tr>
										<td colspan='2' class='message-table'>
											Não existem parâmetros cadastrados
										</td>
									</tr>
								{{/each}}
							</tbody>
							<tfooter></tfooter>
						</table>
					</div>
				</div>
				<div class='panel panel-default table-parameters'>
					<div  class='panel-heading'>
						Ons
					</div>
					<div class='panel-body'>
						<table class='table table-condensed'>
							<thead>
								<tr>
									<th>
										Nome
									</th>
									<th>
										Tipo
									</th>
									<th>
										Parâmetros
									</th>
								</tr>
							<thead>
							<tbody>
								{{#each ons}}
									<tr {{bind-attr class="type"}}>
										<td>
											{{name}}
										</td>
										<td>
											{{type}}
										</td>
										<td>
											{{parameters}}
										</td>
									</tr>
								{{else}}
									<tr>
										<td colspan='3' class='message-table'>
											Não existem Ons cadastrados
										</td>
									</tr>
								{{/each}}
							</tbody>
							<tfooter></tfooter>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
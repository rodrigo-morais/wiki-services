{{#if hasChilds }}
    {{menu-aggregator target=target text=name}}
    <ul class='list-unstyled collapse' {{bind-attr id='target'}} >
        {{#each submenu in submenus}}
          {{menu-item model=submenu type_parent=this.uri}}
        {{/each}}
      </ul>
{{else}}
    {{#if hasTypeParent}}
        {{#link-to type_parent name}}<i class="fa fa-cog"></i>{{ name }}{{/link-to}}
    {{else}}
        <a {{bind-attr href=path}}>
            <i class="fa fa-cog"></i> {{ name }} - {{path}}
        </a>
    {{/if}}
{{/if}}